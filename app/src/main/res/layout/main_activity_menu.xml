<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@color/colorBackground"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/main_navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/primary_material_light"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:text="Actividades"
            android:textColor="#fff"
            android:background="@drawable/mainbuttonshape"
            android:id="@+id/buttonActivities"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:text="Ver Mapa"
            android:textColor="#fff"
            android:background="@drawable/mainbuttonshape"
            android:id="@+id/buttonMap"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:text="Informações"
            android:textColor="#fff"
            android:background="@drawable/mainbuttonshape"
            android:id="@+id/buttonInfo"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_navigation_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/primary_material_light"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:orientation="vertical"
            android:padding="@dimen/card_margin"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:orientation="vertical"
            android:paddingTop="@dimen/main_margin_distances"
            android:paddingBottom="@dimen/main_margin_distances"
            android:paddingLeft="@dimen/main_margin_sides"
            android:paddingRight="@dimen/main_margin_sides"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="32dp"
                android:text="20 e 21 de Agosto"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:paddingTop="5dp"
                android:paddingBottom="20dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18dp"
                android:text="Lorem ipsum dolor sit amet, civibus facilisis molestiae no sit"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="24dp"
                android:text="Lorem ipsum dolor sit amet, civibus facilisis molestiae no sit"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>